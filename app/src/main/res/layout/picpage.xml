<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_pic1page_show" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_fullimage_showtext"
            android:textColor="#AAA"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:layout_marginBottom="50dp"
            />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        >
        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="25dp"
            android:layout_margin="10dp"
            android:src="@drawable/back1"
            android:background="@drawable/bt_bg_select"
            android:id="@+id/ib_pic1page_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_pic1page_date"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#09f"
            />

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="25dp"
            android:id="@+id/ib_pic1page_config"
            android:layout_alignParentRight="true"
            android:src="@drawable/delete"
            android:layout_margin="10dp"
            android:background="@drawable/bt_bg_select"/>

        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="25dp"
            android:layout_toLeftOf="@id/ib_pic1page_config"
            android:id="@+id/ib_pic1page_share"
            android:src="@drawable/share"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bt_bg_select"/>
    </RelativeLayout>
    </RelativeLayout>

</FrameLayout>